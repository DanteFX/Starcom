<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/texViewNombreTarea"
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1" />

        <TextView
            android:id="@+id/texViewDescripcionTarea"
            android:text="Descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2" />
        <CheckBox
            android:id="@+id/checkboxTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3" />

        <TextView
            android:id="@+id/textViewFechaEntrega"
            android:text="01/09/23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4" />
        <TextView
            android:id="@+id/textViewPrioridad"
            android:text="Alto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5" />

        <ImageButton
            android:id="@+id/imageButtonEditar"
            android:layout_width="42dp"
            android:layout_height="35dp"
            android:layout_column="6"
            android:src="@drawable/drawing48"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/imageButtonEliminar"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_column="7"
            android:background="@null"
            android:src="@android:drawable/ic_menu_delete" />
    </TableRow>

</TableLayout>