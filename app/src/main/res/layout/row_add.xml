<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="7"
    android:rowCount="1"
    android:background="#2683D5">

    <TextView
        android:id="@+id/texViewNombreTarea"
        android:text="Nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/texViewDescripcionTarea"
        android:text="Descripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="2"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:gravity="center"
        android:maxLines="4"
        android:ellipsize="end"
        />

    <CheckBox
        android:id="@+id/checkboxTarea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/textViewFechaEntrega"
        android:text="01/09/23"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/textViewPrioridad"
        android:text="Alto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:gravity="center"
        />

    <ImageButton
        android:id="@+id/imageButtonEditar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:background="@null"
        android:src="@drawable/drawing48"
        android:padding="8dp"
        />

    <ImageButton
        android:id="@+id/imageButtonEliminar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:background="@null"
        android:src="@android:drawable/ic_menu_delete"
        android:padding="8dp"
        />

</GridLayout>
